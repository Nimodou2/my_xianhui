    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D1D1D1" />

        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageview_msg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:focusable="false"
                    android:padding="3dp"
                    android:src="@drawable/msg_no"></ImageView>

                <TextView
                    android:id="@+id/textview_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会话"
                    android:textColor="@color/gray_weixin"
                    android:textSize="12sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_man"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageview_man"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:focusable="false"
                    android:padding="3dp"
                    android:src="@drawable/man_yes"></ImageView>

                <TextView
                    android:id="@+id/textview_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:textColor="@color/colorLightYellow"
                    android:textSize="12sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageview_order"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:focusable="false"
                    android:padding="3dp"
                    android:src="@drawable/setting_no"></ImageView>

                <TextView
                    android:id="@+id/textview_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单"
                    android:textColor="@color/gray_weixin"
                    android:textSize="12sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageview_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:focusable="false"
                    android:padding="3dp"
                    android:src="@drawable/setting_no"></ImageView>

                <TextView
                    android:id="@+id/textview_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textColor="@color/gray_weixin"
                    android:textSize="12sp"></TextView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>