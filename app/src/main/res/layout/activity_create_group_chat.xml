<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weixin_lianxiren_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_color">

        <TextView
            android:id="@+id/back"
            style="@style/bar_left"
            android:text="返回" />

        <TextView
            android:id="@+id/cus_name"
            style="@style/bar_center"
            android:text="发起群聊" />

        <TextView
            android:id="@+id/tv_new_build"
            style="@style/bar_right"
            android:text="确定" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <SearchView
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:queryHint="搜索"
            android:background="#fff"
            android:iconifiedByDefault="false">
        </SearchView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/weixingreen"
        android:layout_height="0.8dp" />
    <HorizontalScrollView
        android:id="@+id/hsv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textSize="16dp" />
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_dialog"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shap_all_gray_letter_bg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:alpha="0.7"
            android:textSize="38sp"
            android:visibility="gone" />

        <com.maibo.lvyongsheng.xianhui.utils.ZzLetterSideBar
            android:id="@+id/sidebar"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="60dp"  />
    </RelativeLayout>
</LinearLayout>