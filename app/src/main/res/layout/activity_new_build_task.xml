<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weixin_lianxiren_gray">

    <LinearLayout
        android:id="@id/ll_head"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/back"
            style="@style/bar_left"
            android:text="返回"/>

        <TextView
            android:id="@+id/cus_name"
            style="@style/bar_center"
            android:text="新建任务"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_save"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:paddingRight="10dp"
                android:gravity="center|right"
                android:textColor="#fff"
                android:text="保存"/>
            <TextView
                android:id="@+id/tv_update"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:paddingRight="10dp"
                android:gravity="center|right"
                android:textColor="#fff"
                android:text="修改"/>
            <LinearLayout
                android:id="@+id/ll_two"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:paddingRight="5dp"
                    android:gravity="center|right"
                    android:textColor="#fff"
                    android:text="取消"/>
                <TextView
                    android:id="@+id/tv_update_to_save"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:paddingRight="10dp"
                    android:gravity="center|right"
                    android:textColor="#fff"
                    android:text="保存"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/spacing1"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <LinearLayout
                android:id="@+id/ll_range"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="范围"
                    android:textColor="#000"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:textSize="16dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView5" />

                <TextView
                    android:id="@+id/tv_range"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textColor="@color/gray_weixin"
                    android:paddingRight="10dp"
                    android:text="请选择"/>
                <ImageView
                    android:id="@+id/iv_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@mipmap/nav_to_message_arrow_dark"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:id="@+id/ll_type"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#fff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="类型"
                    android:textColor="#000"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:textSize="16dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textColor="@color/gray_weixin"
                    android:paddingRight="10dp"
                    android:text="请选择"/>
                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@mipmap/nav_to_message_arrow_dark"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:id="@+id/ll_target"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#fff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="目标"
                    android:textColor="#000"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:textSize="16dp"
                    android:layout_height="match_parent" />
               <!-- <EditText
                    android:id="@+id/et_target"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textColor="@color/gray_weixin"
                    android:textColorHint="@color/gray_weixin"
                    android:background="@null"
                    android:paddingRight="10dp"
                    android:hint="请输入"/>-->
                <com.maibo.lvyongsheng.xianhui.view.HPEditText
                    android:id="@+id/et_target"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:gravity="center|right"
                    android:inputType="number"
                    android:textColor="@color/gray_weixin"
                    android:textColorHint="@color/gray_weixin"
                    android:background="@null"
                    android:paddingRight="10dp"
                    android:hint="请输入" />

            </LinearLayout>
            <TextView
                android:id="@+id/spacing2"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <LinearLayout
                android:id="@+id/ll_start"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#fff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="开始"
                    android:textColor="#000"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:textSize="16dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textColor="@color/gray_weixin"
                    android:paddingRight="10dp"
                    android:text="11月23日"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:id="@+id/ll_finish"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#fff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="结束"
                    android:textColor="#000"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:textSize="16dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textColor="@color/gray_weixin"
                    android:paddingRight="10dp"
                    android:text="11月24日"/>

            </LinearLayout>
            <TextView
                android:id="@+id/spacing3"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <LinearLayout
                android:id="@+id/ll_publish_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#fff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="发布时间"
                    android:textColor="#000"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:textSize="16dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_publish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textColor="@color/gray_weixin"
                    android:paddingRight="10dp"
                    android:text="11月23日"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:id="@+id/ll_joiner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="参与者"
                    android:textColor="#000"
                    android:gravity="center|left"
                    android:paddingLeft="20dp"
                    android:textSize="16dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView6" />

                <TextView
                    android:id="@+id/tv_joiner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textColor="@color/gray_weixin"
                    android:paddingRight="10dp"
                    android:text="请选择"/>
                <ImageView
                    android:id="@+id/iv_joiner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@mipmap/nav_to_message_arrow_dark"/>
            </LinearLayout>
            <TextView
                android:id="@+id/spacing4"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_height="100dp"
                android:gravity="top"
                android:paddingLeft="20dp"
                android:hint="备注"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/spacing5"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        <TextView
            android:id="@+id/tv_delete"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#f00"
            android:background="#fff"
            android:text="删除任务"/>
            <TextView
                android:id="@+id/tv_last"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>