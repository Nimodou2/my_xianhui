<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weixin_lianxiren_gray">
    <LinearLayout
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/back"
            style="@style/bar_left"
            android:text="返回"/>
        <TextView
            android:id="@+id/cus_name"
            style="@style/bar_center"
            android:text="退出登录"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:gravity="bottom|center">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:paddingTop="60dp"
            android:alpha="0.2"
            android:src="@mipmap/computer"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="PC端已登录MyBook系统"
            android:gravity="center"
            android:textColor="#9000"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="如果不是本人操作,可以立即退出"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textColor="@color/gray_weixin"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:text="点击确认退出MyBook系统."-->
            <!--android:gravity="center"-->
            <!--android:textColor="@color/gray_weixin"-->
            <!--android:textSize="18dp"/>-->
        <TextView
            android:id="@+id/tv_quite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/shap_all_quit_bg"
            android:text="退出MyBook系统"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorLightYellow"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>